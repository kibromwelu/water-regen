generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  phoneNumber  String     @unique
  username     String?    @unique
  password     String?
  //aggrement    String[]
  status       UserStatus @default(PENDING)
  registeredAt DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt

  socialAccount         SocialAccount[]
  refreshToken          RefreshToken?
  passwordChangeRequest PasswordChangeRequest[]
  tanks                 Tank[]
}

model SocialAccount {
  id         String                @id @default(uuid())
  provider   SocialAccountProvider
  providerId String
  createdAt  DateTime              @default(now())
  updatedAt  DateTime?             @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordChangeRequest {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationCode {
  id          String    @id @default(uuid())
  phoneNumber String    @unique
  code        String
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model Tank {
  id                   String    @id @default(uuid())
  tankerId             Int       @unique @default(autoincrement())
  name                 String
  whitelegShrimpStrain String
  averageBodyWeight    Float
  numberStocked        Int
  createdAt            DateTime  @default(now())
  updatedAt            DateTime? @updatedAt

  userId                String
  user                  User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  husbandryData         HusbandryData[]
  conditions             Condition[]
  recurringConditions    RecurringCondition[]
  feedIncreaseConditions FeedIncreaseCondition[]
  todos                  Todo[]
  records                Record[]
}

model HusbandryData {
  id               String    @id @default(uuid())
  date             DateTime  @unique
  cleaningStatus   Boolean?
  WaterTemperature Float?
  do               Float?
  ph               Float?
  nh4              Float?
  no2              Float?
  alk              Float?
  salinity         Float?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @updatedAt

  tankId           String
  tank             Tank               @relation(fields: [tankId], references: [id], onDelete: Cascade)
  feedingData      FeedingData[]
  supplementDosing SupplementDosing[]
}

model FeedingData {
  id        String    @id @default(uuid())
  type      String?
  amount    Float?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  husbandryDataId String
  husbandryData   HusbandryData @relation(fields: [husbandryDataId], references: [id], onDelete: Cascade)
}

model SupplementDosing {
  id        String    @id @default(uuid())
  name      String?
  dosage    Float?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  husbandryDataId String
  husbandryData   HusbandryData @relation(fields: [husbandryDataId], references: [id], onDelete: Cascade)
}

model Condition {
  id             String             @id @default(uuid())
  name           String
  sensor         SensorType
  value          Float
  condition      ConditionValueType
  recommendation String
  message        String
  type           ConditionType
  createdAt      DateTime           @default(now())
  updatedAt      DateTime?          @updatedAt

  tankId String
  tank   Tank   @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model RecurringCondition {
  id               String       @id @default(uuid())
  name             String
  intervalType     IntervalType
  intervalValue    Int
  endDate          DateTime?
  endingCount      Int?
  message          String
  lastMessageSent  DateTime
  totalMessageSent Int
  createdAt        DateTime     @default(now())
  updatedAt        DateTime?    @updatedAt

  tankId String
  tank   Tank   @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model FeedIncreaseCondition {
  id                    String    @id @default(uuid())
  name                  String
  referenceTime         String
  dailyMessageSentCount Int
  lastMessageSent       DateTime?
  lastFeedAmount        Float     @default(0)
  totalMessageSent      Int
  createdAt             DateTime  @default(now())
  updatedAt             DateTime? @updatedAt

  tankId String
  tank   Tank   @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model Todo {
  id        String    @id @default(uuid())
  message   String
  type      TodoType
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  tankId String
  tank   Tank   @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model Record {
  id                String    @id @default(uuid())
  date              DateTime
  averageBodyWeight Float?
  shrimpWeight      Float?
  feedAdded         Float?
  fcr               Float?
  estimatedCount    Int?
  estimatedHarvest  Float?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime? @updatedAt

  tankId String
  tank   Tank   @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

enum UserStatus {
  PENDING
  ACTIVE
}

enum SocialAccountProvider {
  NAVER
  KAKAO
  GOOGLE
  APPLE
}

enum SensorType {
  DO
  PH
  NH4
  NO2
  ALK
  WATER_TEMPERATURE
}

enum ConditionValueType {
  GTE
  GT
  LTE
  LT
}

enum ConditionType {
  ALERT
  FEEDING
}

enum IntervalType {
  DAYS
  WEEKS
  MONTHS
  YEARS
}

enum TodoType {
  FEEDING
  ALERT
  RECURRING
  FEEDING_INCREASE
}
